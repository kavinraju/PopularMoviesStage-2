<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center"
    app:cardElevation="10dp"
    app:cardCornerRadius="2dp"
    app:cardUseCompatPadding="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_poster_recycerView_Card_HomeActivity"

            android:layout_width="match_parent"
            android:layout_height="@dimen/img_poster_recycerView_Card_HomeActivity_height"

            tools:src="@tools:sample/avatars"
            android:scaleType="fitXY"
            android:contentDescription="@string/this_imageview_displays_the_posters_of_the_movie_in_the_homeactivity"
            android:transitionName="sharedElementTransition"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:id="@+id/view_recycerView_Card_HomeActivity"
            android:layout_width="match_parent"
            android:layout_height="1dp"

            android:background="@color/colorPrimary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/img_poster_recycerView_Card_HomeActivity" />

        <ImageView
            android:id="@+id/img_star_recycerView_Card_HomeActivity"
            android:layout_width="@dimen/img_star_recycerView_Card_HomeActivity_width"
            android:layout_height="@dimen/img_star_recycerView_Card_HomeActivity_height"

            android:contentDescription="@string/icon"
            android:src="@drawable/star_primarydark_24dp"
            android:layout_marginStart="8dp"

            app:layout_constraintTop_toBottomOf="@id/img_poster_recycerView_Card_HomeActivity"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_rating_recycerView_Card_HomeActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/tv_rating_recycerView_Card_HomeActivity_size"

            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:layout_marginStart="2dp"

            app:layout_constraintStart_toEndOf="@id/img_star_recycerView_Card_HomeActivity"
            app:layout_constraintTop_toTopOf="@id/img_star_recycerView_Card_HomeActivity"
            app:layout_constraintBottom_toBottomOf="@id/img_star_recycerView_Card_HomeActivity"
            tools:text="8.9" />

        <ImageView
            android:id="@+id/img_favorite_recycerView_Card_HomeActivity"
            android:layout_width="@dimen/img_favorite_recycerView_Card_HomeActivity_width"
            android:layout_height="@dimen/img_favorite_recycerView_Card_HomeActivity_height"

            android:contentDescription="@string/icon"
            android:src="@drawable/favorite_border_primary_24dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"

            app:layout_constraintTop_toBottomOf="@id/view_recycerView_Card_HomeActivity"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>