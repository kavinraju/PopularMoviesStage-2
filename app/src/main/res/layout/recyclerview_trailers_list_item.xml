<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <android.support.v7.widget.CardView
        android:id="@+id/recyclerView_trailers_cardview"
        app:cardElevation="16dp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/recylerview_trailers_img_thumbnail"
                android:layout_width="250dp"
                android:layout_height="150dp"

                android:background="@drawable/scrim_gradient_rect"
                android:contentDescription="@string/thumbnail"

                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/recylerview_trailers_img_btn_play"
                android:layout_width="48dp"
                android:layout_height="48dp"

                android:background="@android:color/transparent"
                android:contentDescription="@string/thumbnail"
                android:scaleType="centerCrop"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/play_circle_outline_white_24dp" />

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/recylerview_trailers_tv_no_trailer_available"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="@string/no_trailers_available"
        style="@style/TextAppearance.AppCompat.Small"
        android:fontFamily="monospace"
        android:textStyle="italic"
        android:textColor="@color/black"
        android:padding="8dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


</android.support.constraint.ConstraintLayout>

